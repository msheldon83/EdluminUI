{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./modules",
        "jsx": "react",
        "lib": ["dom", "es6", "es2015", "esnext.asynciterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": true,
        "rootDir": ".",
        "outDir": "./dist",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "target": "es5",
        "downlevelIteration": true
    },
    "include": ["threaded-lint/*.ts"],
    "files": [
        "threaded-lint/typings/eslint/index.d.ts",
        "threaded-lint/typings/eslint/ts3.1/index.d.ts"
    ]
}
