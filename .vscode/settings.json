{
  "editor.formatOnSave": true,
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.tabSize": 2,
  "editor.gotoLocation.multiple": "goto",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "TSX",
    "JSX"
  ]
}
